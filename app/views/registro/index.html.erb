<h1>Registro nuevo usuario</h1>
<% form_for :user do |f| %>
	<p>
	<%= f.label :nombre %>
	<%= f.text_field :nombre %>
	</p>
	<p>
	<%= f.label :email %>
	<%= f.text_field :email %>
	</p>
	<p>
	<%= f.label :password %>
	<%= f.text_field :password %>
	</p>
	<p>
	<%= f.submit "Guardar" %>
	</p>
<% end %>
